{
  "name": "truss",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@truss/web",
    "build:precision": "turbo run build --filter=@truss/precision",
    "build:momentum": "turbo run build --filter=@truss/momentum",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@truss/web",
    "dev:precision": "turbo run dev --filter=@truss/precision",
    "dev:momentum": "turbo run dev --filter=@truss/momentum",
    "dev:backend": "turbo run dev --filter=@truss/backend",
    "deploy:backend": "cd packages/backend && npx convex deploy",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "cleanup-ports": "./scripts/cleanup-ports.sh",
    "============ CI/CD ============": "",
    "ci:test": "bun run lint && bun run check-types && bun run format:check",
    "ci:build": "bun run build",
    "precommit": "bun run ci:test",
    "============ RELEASES (Changesets - Automated) ============": "",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun run changeset:version && bun run changeset:publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-devtools": "^1.135.2",
    "@tanstack/router-plugin": "^1.135.2",
    "concurrently": "^9.2.1",
    "culori": "^4.0.2",
    "esbuild": "~0.25.11",
    "exceljs": "^4.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.3",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20.11.0",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@daveyplate/better-auth-tauri": "^0.1.6",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.135.2",
    "better-auth": "1.4.9"
  },
  "overrides": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
